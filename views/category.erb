<% if @categories.any? %>
  <h3>All categories</h3>
  <p>
    Click on a link to edit the text of the category or delete it.
  </p>
  <ul>
    <% @categories.each() do |category| %>
    <li><a href="/category/<%= category.id() %>" ><%= category.name() %></a></li>
    <% end %>
  </ul>
<% else %>

<% end %>
<div class="well">
  <form class="form-horizontal" action="/category" method="post">
    <label for="cat_type">Add a category or tag:</label>
    <input type="text" id="cat_type" name="cat_type">
    <button type="submit" name="button">Submit</button>
  </form>

</div>
<p>
  <a href="/">Home</a>
</p>
