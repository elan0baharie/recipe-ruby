<% if @recipes.any? %>
  <h3>All recipes</h3>
  <ul>
    <% @recipes.each() do |recipe| %>
    <li><a href="/recipe/<%= recipe.id() %>" ><%= recipe.name() %></a></li>
    <% end %>
  </ul>
<% else %>

<% end %>
<div class="well">
  <form class="form-horizontal" action="/recipe" method="post">
    <label for="cat_type">Add a recipe:</label>
    <input type="text" id="cat_type" name="cat_type">
    <button type="submit" name="button">Submit</button>
  </form>

</div>
